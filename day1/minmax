{
    long long int max = (long long int) (pow(2, 63) -1);
    long long int min = (int)(pow (2,63)* -1);
    printf("max %lld\n", max);  // max value is exact long long int value
    printf("min %lld\n", min);   // min value only gives range of int as we have assigned only int the value is not exact as word value
